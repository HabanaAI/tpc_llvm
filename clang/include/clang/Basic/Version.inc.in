#include "clang/Basic/TPCVersion.h"

#define CLANG_VERSION @CLANG_VERSION@
#define CLANG_VERSION_STRING "@CLANG_VERSION@"
#define CLANG_VERSION_MAJOR @CLANG_VERSION_MAJOR@
#define CLANG_VERSION_MINOR @CLANG_VERSION_MINOR@
#define CLANG_VERSION_PATCHLEVEL @CLANG_VERSION_PATCHLEVEL@

// TPC version numbers
#define TPC_COMPILER_VERSION @TPC_COMPILER_VERSION@
#define TPC_COMPILER_VERSION_STRING "@TPC_COMPILER_VERSION@"
#define TPC_COMPILER_VERSION_MAJOR @CTPC_COMPILER_VERSION_MAJOR@
#define TPC_COMPILER_VERSION_MINOR @TPC_COMPILER_VERSION_MINOR@
#define TPC_COMPILER_VERSION_PATCHLEVEL @TPC_COMPILER_VERSION_BUILD@

#define VERSION2DEC(a, b, c) (((a) << 16) + ((b) << 8) + (c))
#define TPC_COMPILER_RELEASE() VERSION2DEC(HL_DRIVER_MAJOR, HL_DRIVER_MINOR, HL_DRIVER_PATCHLEVEL)
#define TPC_DROP_RELEASE() VERSION2DEC(HL_COMPILER_DROP_MAJOR, HL_COMPILER_DROP_MINOR, HL_COMPILER_DROP_PATCHLEVEL)
